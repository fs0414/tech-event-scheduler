{
  "$schema": "https://raw.githubusercontent.com/oxc-project/oxc/main/npm/oxlint/configuration_schema.json",
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "off",
    "eqeqeq": "error",
    "no-var": "error",
    "prefer-const": "error"
  },
  "settings": {},
  "env": {
    "browser": true,
    "node": true
  },
  "globals": {},
  "ignorePatterns": [
    "node_modules",
    "dist",
    ".output",
    "*.gen.ts",
    "drizzle"
  ]
}
